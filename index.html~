<script>
    AOS.init({
        duration: 1000
    });
</script>

<script>

    $(document).ready(function () {
        $('#menu-icon').click(function (e) {
            e.stopPropagation();
            $('.nav-bar').slideToggle(300);
        });

        $(document).click(function (e) {
            if (!$(e.target).closest('.nav-bar, #menu-icon').length) {
                $('.nav-bar').slideUp(300);
            }
        });

        $('.nav-bar a').click(function () {
            $('.nav-bar').slideUp(300);
        });

        function openDrivePopup(url) {
            window.open(url, 'driveWindow', 'width=800,height=600,resizable=yes,scrollbars=yes');
        }
    });


    $('#send-btn').click(function(){
        const phone = '94707431532';

        const name = $('#name').val();
        const email = $('#email').val();
        const message = $('#message').val();

        const fullMessage = `Contact Form Message\n\n` +
            `Name : ${name}\n` +
            `Email : ${email}\n` +
            `Message : ${message}`;

        const encodedMessage = encodeURIComponent(fullMessage);

        const url = `https://wa.me/${phone}?text=${encodedMessage}`;

        window.open(url, '_blank');
    });
</script>

